<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ProjectItemHeaderEdit" parent="AdwBin">
    <child>
      <object class="AdwBin" id="project_item">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">20</property>
            <property name="margin_start">10</property>
            <property name="margin_end">10</property>
            <property name="margin_bottom">10</property>
            <property name="margin_top">10</property>
            <child>
              <object class="GtkBox" id="header_box">
                <property name="css-classes">toolbar</property>
                <child>
                  <object class="GtkImage" id="header_icon">
                    <property name="pixel-size">48</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="header_second_col">
                    <property name="orientation">vertical</property>
                    <property name="spacing">20</property>
                    <property name="valign">center</property>
                    <property name="hexpand">True</property>
                    <!-- programmatically add entry or label and tie to property -->
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="spacing">10</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Group</property>
                  </object>
                </child>
                <child>
                  <object class="GtkDropDown" id="group_dropdown">
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
